{
  "Application": {
    "addHandler": "addApplication",
    "summaryAttributes": {
      "SourcePath": {},
      "Target": {}
    },
    "attributeDetails": {
      "AltDescriptorPath": {
        "fileOptions": [{"type": "file", "extensions": ["xml"]}]
      },
      "AltWLSDescriptorPath": {
        "fileOptions": [{"type": "file", "extensions": ["xml"]}]
      },
      "InstallDir": {
        "fileOptions": [{"type": "dir"}]
      },
      "ModuleType": {
        "editorType": "combo",
        "optionsMatch": "lower",
        "options": [
          { "value": "ear", "label": "EAR" },
          { "value": "jar", "label": "JAR" },
          { "value": "war", "label": "WAR" },
          { "value": "rar", "label": "RAR" }
        ]
      },
      "PlanDir": {
        "fileOptions": [{"type": "dir"}]
      },
      "PlanPath": {
        "archiveTypes": ["applicationDeploymentPlan"]
      },
      "PlanStagingMode": {
        "options": [
          { "value": "stage", "labelKey": "staging-stage-label" },
          { "value": "nostage", "labelKey": "staging-no-stage-label" },
          { "value": "external_stage", "labelKey": "staging-external-label" }
        ]
      },
      "SourcePath": {
        "archiveTypes": ["application"]
      },
      "StagingMode": {
        "options": [
          { "value": "stage", "labelKey": "staging-stage-label" },
          { "value": "nostage", "labelKey": "staging-no-stage-label" },
          { "value": "external_stage", "labelKey": "staging-external-label" }
        ]
      },
      "SecurityDDModel": {
        "options": [
          { "value": "DDOnly", "labelKey": "security-model-dd-only-label" },
          { "value": "CustomRoles", "labelKey": "security-model-custom-roles-label" },
          { "value": "CustomRolesAndPolicies", "labelKey": "security-model-custom-roles-and-policies-label" },
          { "value": "Advanced", "labelKey": "security-model-advanced-label" }
        ]
      }
    },
    "sections": [
      {
        "type": "attributes",
        "attributes": [
          "SourcePath",
          "ModuleType",
          "PlanDir",
          "PlanPath",
          "StagingMode",
          "PlanStagingMode",
          "DeploymentPrincipalName",
          "SecurityDDModel",
          "DeploymentOrder",
          "Notes",
          "Target"
        ]
      },
      {
        "type": "collapsible",
        "labelKey": "advanced-label",
        "sections": [
          {
            "type": "attributes",
            "labelKey": "application-attributes-label",
            "attributes": [
              "CacheInAppDirectory",
              "ParallelDeployModules",
              "MultiVersionApp",
              "InstallDir",
              "CompatibilityName"
            ]
          },
          {
            "type": "attributes",
            "labelKey": "alternate-descriptor-paths-label",
            "attributes": [
              "AltDescriptorPath",
              "AltWLSDescriptorPath"
            ]
          },
          {
            "type": "attributes",
            "labelKey": "miscellaneous-attributes-label",
            "addRemainingAttributes": true
          }
        ]
      },
      {
        "type": "hidden",
        "attributes": [
          "AltDescriptorDir",
          "ConfiguredApplicationIdentifier",
          "Untargeted",
          "ValidateDDSecurityData"
        ]
      }
    ]
  },
  "Application/SubDeployment": {
    "sections": [
      {
        "type": "attributes",
        "attributes": [
          "CompatibilityName",
          "ModuleType",
          "Notes",
          "Target"
        ]
      },
      {
        "type": "hidden",
        "attributes": [
          "Untargeted"
        ]
      }
    ]
  }
