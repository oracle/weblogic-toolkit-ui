{
  "name": "wktui",
  "productName": "WebLogic Kubernetes Toolkit UI",
  "version": "1.5.0",
  "description": "WebLogic Kubernetes Toolkit UI",
  "copyright": "Copyright (c) 2021, 2023, Oracle and/or its affiliates.",
  "homepage": "https://github.com/oracle/weblogic-toolkit-ui",
  "main": "app/main.js",
  "scripts": {
    "start": "electron --trace-warnings . dev",
    "install-tools": "node --trace-uncaught scripts/installTools.js",
    "build": "npm run build:jet && npm run install-tools && npm run build:installer",
    "build:jet": "cd ../webui && npm run build:release && cd ../electron",
    "build:installer": "electron-builder -p never",
    "eslint": "npx eslint app/main.js app/js/*.js app/js/prompt/*.js app/test/*.js",
    "test": "mocha --timeout 10000 --reporter spec app/test/*-test.js",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:oracle/weblogic-toolkit-ui.git"
  },
  "keywords": [
    "weblogic",
    "kubernetes"
  ],
  "author": {
    "name": "Oracle",
    "email": "info@oracle.com"
  },
  "contributors": [
    {
      "name": "Richard Killen",
      "email": "richard.killen@oracle.com"
    },
    {
      "name": "Russell Gold",
      "email": "russell.gold@oracle.com"
    },
    {
      "name": "Johnny Shum",
      "email": "johnny.shum@oracle.com"
    },
    {
      "name": "Robert Patrick",
      "email": "robert.patrick@oracle.com"
    }
  ],
  "license": "UPL-1.0",
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "electron": "^22.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.33.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3"
  },
  "dependencies": {
    "electron-updater": "^5.3.0",
    "extract-zip": "^2.0.1",
    "gunzip-maybe": "^1.4.2",
    "https-proxy-agent": "^5.0.1",
    "i18next": "^22.4.9",
    "i18next-fs-backend": "^2.1.1",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "keytar": "^7.9.0",
    "node-fetch": "^2.6.9",
    "tar": "^6.1.13",
    "uuid": "^9.0.0",
    "which": "^3.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "build": {
    "appId": "com.oracle.weblogic.wktui",
    "asar": true,
    "afterSign": "./build/notarize.js",
    "files": [
      "!app/web/test",
      "!app/test"
    ],
    "extraFiles": [
      {
        "from": "../tools",
        "to": "tools"
      }
    ],
    "extraResources": [
      {
        "from": "../LICENSE.txt",
        "to": "LICENSE.txt"
      },
      {
        "from": "../THIRD_PARTY_LICENSES.txt",
        "to": "THIRD_PARTY_LICENSES.txt"
      },
      {
        "from": "../WKTUI_VERSION.txt",
        "to": "WKTUI_VERSION.txt"
      },
      {
        "from": "../url-catalog.json",
        "to": "url-catalog.json"
      }
    ],
    "fileAssociations": [
      {
        "ext": "wktproj",
        "name": "WKTPROJ",
        "description": "WebLogic Kubernetes Toolkit project file",
        "mimeType": "application/vnd.oracle.wkt.project",
        "role": "Editor"
      }
    ],
    "directories": {
      "output": "../dist"
    },
    "mac": {
      "category": "Utility",
      "target": {
        "target": "default"
      },
      "darkModeSupport": false,
      "type": "distribution",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "rpm"
        },
        {
          "target": "deb"
        }
      ]
    },
    "rpm": {
      "depends": [
        "libXScrnSaver",
        "libsecret-devel",
        "libxshmfence",
        "libdrm",
        "libgbm",
        "alsa-lib",
        "xauth",
        "atk-devel",
        "java-atk-wrapper"
      ],
      "fpm": [
        "--rpm-rpmbuild-define",
        "_build_id_links none"
      ]
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libsecret-1-dev"
      ]
    }
  }
}
