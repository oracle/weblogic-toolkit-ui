{
  "name": "wktui",
  "productName": "WebLogic Kubernetes Toolkit UI",
  "version": "0.8.12",
  "description": "WebLogic Kubernetes Toolkit UI",
  "copyright": "Copyright (c) 2021, Oracle and/or its affiliates.",
  "homepage": "https://github.com/oracle/weblogic-toolkit-ui",
  "main": "app/main.js",
  "scripts": {
    "start": "electron --trace-warnings . dev",
    "install-tools": "node --trace-uncaught scripts/installTools.js",
    "build": "npm run build:jet && npm run install-tools && npm run build:installer",
    "build:jet": "cd ../webui && npm run build:release && cd ../electron",
    "build:installer": "electron-builder -p never",
    "eslint": "npx eslint app/main.js app/js/**/*.js app/test/*-test.js",
    "test": "mocha --timeout 10000 --reporter spec app/test/*-test.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:oracle/weblogic-toolkit-ui.git"
  },
  "keywords": [
    "weblogic",
    "kubernetes"
  ],
  "author": {
    "name": "Oracle",
    "email": "info@oracle.com"
  },
  "contributors": [
    {
      "name": "Richard Killen",
      "email": "richard.killen@oracle.com"
    },
    {
      "name": "Russell Gold",
      "email": "russell.gold@oracle.com"
    },
    {
      "name": "Johnny Shum",
      "email": "johnny.shum@oracle.com"
    },
    {
      "name": "Robert Patrick",
      "email": "robert.patrick@oracle.com"
    }
  ],
  "license": "UPL-1.0",
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "electron": "^13.1.9",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "mocha": "^9.0.3",
    "proxyquire": "^2.1.3"
  },
  "dependencies": {
    "electron-updater": "^4.3.9",
    "extract-zip": "^2.0.1",
    "gunzip-maybe": "^1.4.2",
    "https-proxy-agent": "^5.0.0",
    "i18next": "^20.4.0",
    "i18next-fs-backend": "^1.1.1",
    "js-yaml": "^4.1.0",
    "jszip": "^3.7.1",
    "keytar": "^7.7.0",
    "node-fetch": "^2.6.1",
    "tar": "^6.1.7",
    "uuid": "^8.3.2",
    "which": "^2.0.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "build": {
    "appId": "com.oracle.weblogic.wktui",
    "asar": true,
    "files": [
      "!app/web/test",
      "!app/test"
    ],
    "extraFiles": [
      {
        "from": "../tools",
        "to": "tools"
      },
      {
        "from": "../LICENSE.txt",
        "to": "LICENSE.txt"
      },
      {
        "from": "../THIRD_PARTY_LICENSES.txt",
        "to": "THIRD_PARTY_LICENSES.txt"
      },
      {
        "from": "../WKTUI_VERSION.txt",
        "to": "WKTUI_VERSION.txt"
      },
      {
        "from": "../url-catalog.json",
        "to": "url-catalog.json"
      }
    ],
    "fileAssociations": [
      {
        "ext": "wktproj",
        "name": "WKTPROJ",
        "description": "WebLogic Kubernetes Toolkit project file",
        "mimeType": "application/vnd.oracle.wkt.project",
        "role": "Editor"
      }
    ],
    "directories": {
      "output": "../dist"
    },
    "mac": {
      "category": "Utility",
      "target": "default",
      "darkModeSupport": false,
      "type": "distribution"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "rpm"
        },
        {
          "target": "deb"
        }
      ]
    },
    "rpm": {
      "depends": [
        "libXScrnSaver",
        "libsecret-devel"
      ],
      "fpm": [
        "--rpm-rpmbuild-define",
        "_build_id_links none"
      ]
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libsecret-1-dev"
      ]
    }
  }
}
